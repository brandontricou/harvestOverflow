<%= form_for(@overflow) do |f| %>
  <%= render "shared/errors", object: @overflow %>
  <fieldset>
    <ol>
      <li>
        <%= f.label :item_type %>
        <%= f.text_field :item_type, autofocus: true %>
      </li>
      <li>
        <%= f.label :description %>
        <%= f.text_area :description, cols: 40, rows: 7 %>
      </li>
      <li>
        <%= f.label :perishable %>
        <%= f.select :perishable, Overflow::PERISHABLE, prompt: "Pick one" %>
      </li>
      <li>
        <%= f.label :expiration %>
        <%= f.date_select :expiration %>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", root_path, class: 'button' %>
    </p>
  </fieldset>
<% end %>